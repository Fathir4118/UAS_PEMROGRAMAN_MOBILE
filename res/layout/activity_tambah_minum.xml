<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#33B5FF"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kembali"
        android:textColor="#000000"
        android:textSize="18sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tambah Minum"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="-30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Berapa ml?"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginTop="50dp"/>

    <EditText
        android:id="@+id/inputMl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="(Angka/jumlah ml yg di input)"
        android:inputType="number"
        android:textAlignment="center"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pilih Cepat"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="40dp"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:layout_marginTop="10dp">

        <Button android:id="@+id/btn100" android:text="100 ml" android:layout_margin="5dp" android:layout_columnWeight="1"/>
        <Button android:id="@+id/btn300" android:text="300 ml" android:layout_margin="5dp" android:layout_columnWeight="1"/>
        <Button android:id="@+id/btn500" android:text="500 ml" android:layout_margin="5dp" android:layout_columnWeight="1"/>
        <Button android:id="@+id/btnCustom" android:text="Custom" android:layout_margin="5dp" android:layout_columnWeight="1"/>
    </GridLayout>

    <Button
        android:id="@+id/btnSimpan"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Simpan"
        android:backgroundTint="#FFFFFF"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"/>
</LinearLayout>